{
  "$schema": "https://turbo.build/schema.json",
  "pipeline": {
    "build": {
      "dependsOn": ["^build"],
      "outputs": ["dist/**", ".next/**"]
    },
    "build-fast": {
      "dependsOn": ["^build-fast"],
      "outputs": ["dist/**", ".next/**"]
    },
    "lint": {
      "outputs": []
    },
    "format:check": {
      "outputs": []
    },
    "//#format:check": {
      "dependsOn": [],
      "outputs": []
    },
    "format:fix": {
      "outputs": [],
      "cache": false
    },
    "//#format:fix": {
      "dependsOn": [],
      "outputs": [],
      "cache": false
    },
    "dev": {
      "cache": false
    }
  }
}
