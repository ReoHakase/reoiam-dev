{
  "$schema": "https://json.schemastore.org/tsconfig",
  "extends": "tsconfig/nextjs.json",
  "compilerOptions": {
    "plugins": [
      {
        "name": "next"
      }
    ],
    "baseUrl": "./",
    "ignoreDeprecations": "5.0",
    "paths": {
      "@/*": ["./src/*"],
      "@public/*": ["./public/*"],
      "contentlayer/generated": ["./.contentlayer/generated"]
    },
    "rootDir": "./"
  },
  "mdx": {
    "plugins": ["remark-gfm", "remark-math"]
  },
  "include": [
    "next-env.d.ts",
    "next.config.js",
    ".eslintrc.js",
    "postcss.config.cjs",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": ["node_modules"]
}
